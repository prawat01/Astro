---
interface Props {
  color?: 'primary' | 'secondary' | 'worning' | 'danger'
}

const { color = 'primary' } = Astro.props

function getColor() {
    if (color === 'primary') {
        return 'bg-blue-500'
    } else if (color === 'secondary') {
        return 'bg-gray-600'
    } else if (color === 'worning') {
        return 'bg-yellow-400'
    } else {
        return 'bg-red-500'
    }
}
---

<!-- <button class:list={['text-white font-bold py-2 px-4 rounded flex items-center gap-2', color === 'primary' ? 'bg-blue-500' : 'bg-gray-300']}></button> -->
<button class:list={['text-white font-bold py-2 px-4 rounded flex items-center gap-2', getColor()]}>
  <!-- Slot Named -->
  <slot name="icon"></slot>

  <!-- Default Slot with Fallback -->
  <slot>
    Button
  </slot>
</button>