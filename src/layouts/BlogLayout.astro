---
import '../styles/global.css'
import { ClientRouter } from "astro:transitions";

interface Props {
    frontmatter: {
        title: string;
    };
}

const siteName = "My Blog";

const { frontmatter: { title }}: Props = Astro.props

---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title ? `${title} | ${siteName}` : siteName}</title>
        <ClientRouter />
	</head>
	<body class="font-sans">
        <header class="border-b border-gray-200 dark:border-gray-700">
            <div class="container mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex items-center justify-between h-16">
                    <div class="flex-shrink-0">
                        <a href="/" class="text-2xl font-bold text-white dark:text-blue-400 hover:opacity-80 transition-opacity">My Astro Blog</a>
                    </div>
                </div>
            </div>
        </header>
        <main class="prose prose-a:text-orange-600 container mx-auto px-4 sm:px-6 lg:px-8 py-8 text-black">
            <slot />
        </main>
    </body>
</html>
</body>