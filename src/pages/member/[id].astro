---
import type { GetStaticPaths } from "astro";
import {readFile} from 'node:fs/promises';

interface Member {
    id: number;
    name: string;
    skills: string;
}

interface Props {
    member: Member;
}


export const getStaticPaths = ( async () => {
    const data = await readFile('src/data/member.json', 'utf-8');
    const parsed = JSON.parse(data) as Member[];
    return parsed.map(member => ({
        params: { id: member.id.toString() },
        props: { member }
    }));
 }) satisfies GetStaticPaths;

 const { member } = Astro.props;

---

<main class="min-h-screen bg-gray-50 dark:bg-gray-900 flex items-center justify-center p-4">
    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-8 max-w-md w-full text-center">
        <div class="mb-4">
            <h1 class="text-4xl font-extrabold text-gray-900 dark:text-white">{member.name}</h1>
            <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">Member ID: {member.id}</p>
        </div>

        <div class="mt-6">
            <h2 class="text-lg font-semibold text-gray-700 dark:text-gray-300 mb-3">Skills</h2>
            <div class="flex flex-wrap justify-center gap-2">
                {member.skills.split(',').map(skill => (
                    <span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-1 rounded-full dark:bg-blue-900 dark:text-blue-300">{skill.trim()}</span>
                ))}
            </div>
        </div>
    </div>
</main>