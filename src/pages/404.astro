---
import '../styles/global.css'
import Layout from '../layouts/Layout.astro'

---
<Layout>

<div class="flex flex-col items-center justify-center min-h-[60vh] text-center">
        <p class="text-9xl font-extrabold text-gray-800 tracking-wider mb-4">404</p>
        <h1 class="text-4xl font-bold text-gray-700 mb-8">Page Not Found</h1>
        
        <a 
            href="/" 
            class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg shadow-xl transition duration-300 transform hover:scale-105 inline-block"
        >
            Back Home
        </a>
        
        <p class="mt-4 text-gray-500">
            The page you are looking for does not exist.
        </p>
    </div>

</Layout>
